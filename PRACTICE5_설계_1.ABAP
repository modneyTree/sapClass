FORM CALL_ALV .

  CALL FUNCTION 'REUSE_ALV_GRID_DISPLAY'
    EXPORTING
      i_callback_program = sy-repid    " 현재 프로그램 이름
      it_fieldcat        = GT_FIELDCAT " 필드 카탈로그
      IS_LAYOUT = GS_LAYOUT
      IT_SORT = GT_SORT
    TABLES
      t_outtab           = GT_STUDENT  " 출력할 데이터
    EXCEPTIONS
      program_error      = 1
      OTHERS             = 2.

  IF sy-subrc <> 0.
    WRITE: / 'ALV 출력 중 오류가 발생했습니다.'.
  ENDIF.

ENDFORM.

